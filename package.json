{
  "name": "hanoi-tower",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mttmantovani/hanoi-tower.git"
  },
  "type": "module",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "dev": "vite",
    "build": "rimraf ./dist && tsc && vite build",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:eslint": "eslint . --ext ts,tsx,json --report-unused-disable-directives --max-warnings 0",
    "lint:prettier": "prettier \"**/*.{json,js,ts,tsx,md}\" --ignore-path \".gitignore\" --ignore-path \"**/package-lock.json\" --check --config \".prettierrc.json\"",
    "format": "npm run lint:prettier -- --write && npm run lint:eslint -- --fix",
    "start": "vite preview",
    "prepare": "husky"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@fortawesome/free-brands-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@mui/icons-material": "^5.15.14",
    "@mui/material": "^5.15.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-toggle-dark-mode": "^1.1.1",
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2",
    "vite": "^5.2.6"
  }
}
